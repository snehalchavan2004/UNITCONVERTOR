<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newname"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/unit"
        android:layout_width="232dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="13dp"
        android:backgroundTint="#974646"
        android:text="Unit  Converter"
        android:textColor="#880E4F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kidimg" />

    <EditText
        android:id="@+id/value"
        android:layout_width="325dp"
        android:layout_height="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="38dp"
        android:backgroundTint="#AC4242"
        android:ems="10"
        android:hint="Enter value"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#6C5DAF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unit" />

    <Button
        android:id="@+id/degreeToFah"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="94dp"
        android:backgroundTint="#F57F17"
        android:onClick="kgTog"
        android:text="kilogram to gram"
        android:textColor="#0C0C0C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value" />

    <Button
        android:id="@+id/fahToDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="94dp"
        android:backgroundTint="#B70CC3"
        android:onClick="gTokg"
        android:text="gram to kilogram"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value" />

    <ImageView
        android:id="@+id/kidimg"
        android:layout_width="190dp"
        android:layout_height="167dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="24dp"
        android:background="#86F6F0F6"
        app:layout_constraintBottom_toTopOf="@+id/unit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tempicon" />

    <ImageView
        android:id="@+id/newimg"
        android:layout_width="380dp"
        android:layout_height="341dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintStart_toEndOf="@+id/degreeToFah"
        app:layout_constraintTop_toBottomOf="@+id/value"
        app:srcCompat="@drawable/animatelogo" />

</androidx.constraintlayout.widget.ConstraintLayout>